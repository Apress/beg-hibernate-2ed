<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration
	PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
   <session-factory>
      <property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
      <property name="hibernate.connection.url">jdbc:hsqldb:file:deadlockdb</property>
      <property name="hibernate.username">sa</property>
      <property name="hibernate.password"></property>
      <property name="show_sql">false</property>
      <property name="dialect">org.hibernate.dialect.HSQLDialect</property>

      <mapping resource="com/hibernatebook/session/deadlock/Publisher.hbm.xml"/>
      <mapping resource="com/hibernatebook/session/deadlock/Subscriber.hbm.xml"/>
   </session-factory>
</hibernate-configuration>
